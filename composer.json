{
    "name": "everton3x/kontas",
    "description": "Gestão financeira e orçamentária na linha de comando.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Everton da Rosa",
            "email": "everton3x@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.0.3",
        "league/climate": "@dev",
        "ergebnis/json-printer": "dev-main",
        "twig/twig": "3.x-dev",
        "phpoffice/phpspreadsheet": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "kontas\\": "src"
        },
        "files": [
            "init.php"
        ]
    },
    "scripts": {
        "push": [
            "git add .",
            "git commit",
            "git push"
        ],
        "backup": [
            "del /f backup\\auxiliar\\*.json",
            "del /f backup\\periodos\\*.json",
            "copy /v /y data\\auxiliar\\*.json backup\\auxiliar\\",
            "copy /v /y data\\periodos\\*.json backup\\periodos\\"
        ],
        "restore": [
            "del /f data\\auxiliar\\*.json",
            "del /f data\\periodos\\*.json",
            "copy /v /y backup\\auxiliar\\*.json data\\auxiliar\\",
            "copy /v /y backup\\periodos\\*.json data\\periodos\\"
        ]
    }
}
